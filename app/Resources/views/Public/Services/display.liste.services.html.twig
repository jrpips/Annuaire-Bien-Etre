{# empty Twig template #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block title %}
    Services - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="main">

        <div class="main-inner">

            <div class="content">

                <div class="row">

                    <div class="col-md-offset-3">

                        <h4 class="media-heading">Services</h4>
                        
                        <ul class="media-list">
                            
                            {% for service in services %}  
                                
                                <li class="media">
                                    
                                    <div class="media-left">
                                        {% set pathImg=(service.image.url matches '{^http}')?'':'image/userUploads/' %}
                                        <img  style="width:100px;" src="{{ asset(pathImg~service.image.url )}}" alt="{{ service.image.name }}"/>

                                    </div>

                                    <div class="media-body">

                                        <a href="{{ path('details_service',{'service_nom':service.nom})}}">{{ service.nom }}</a>                     
                                        <div>{{service.description}}</div>
                                        {{service.image.url}}

                                    </div>  
                                        
                                </li>
                                
                            {% endfor %}

                        </ul>

                    </div>

                </div>

            </div>

        </div>

    </div>
{%endblock%}