{# empty Twig template #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="main">
            <div class="main-inner">
                <div class="container">
                    <div class="content">
                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-4">


                                <div class="page-title">
                                    <h1>Inscription Prestataire</h1>
                                </div>

                                {{ form_start(form) }}

                                <div class="form-group">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.utilisateur.username) }}
                                    {{ form_widget(form.utilisateur.username) }}
                                    {{ form_errors(form.utilisateur.username) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.siteInternet) }}
                                    {{ form_widget(form.siteInternet) }}
                                    {{ form_errors(form.siteInternet) }}

                                </div>
                                <div class="form-group">
                                    {{ form_label(form.telephone) }}
                                    {{ form_widget(form.telephone) }}
                                    {{ form_errors(form.telephone) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.tva) }}
                                    {{ form_widget(form.tva) }}
                                    {{ form_errors(form.tva) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.utilisateur.email) }}
                                    {{ form_widget(form.utilisateur.email) }}
                                    {{ form_errors(form.utilisateur.email) }}
                                </div>
                                {% if not is_granted('ROLE_PRESTATAIRE') %}
                                <div class="form-group">
                                    {{ form_label(form.utilisateur.password) }}
                                    {{ form_widget(form.utilisateur.password) }}
                                    {{ form_errors(form.utilisateur.password) }}
                                </div>
                                {% endif %}
                                {#  <div class="form-group">
                                      {{form_label(form.utilisateur.confPwd)}}
                                      {{form_widget(form.utilisateur.confPwd)}}
                                      {{form_errors(form.utilisateur.confPwd)}}
                                  </div>#}
                                <div class="form-group">
                                    {{ form_label(form.utilisateur.adresseRue) }}
                                    {{ form_widget(form.utilisateur.adresseRue) }}
                                    {{ form_errors(form.utilisateur.adresseRue) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.utilisateur.adresseNumero) }}
                                    {{ form_widget(form.utilisateur.adresseNumero) }}
                                    {{ form_errors(form.utilisateur.adresseNumero) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.utilisateur.adresseUtilisateur.codePostal) }}
                                    {{ form_widget(form.utilisateur.adresseUtilisateur.codePostal) }}
                                    {{ form_errors(form.utilisateur.adresseUtilisateur.codePostal) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.utilisateur.adresseUtilisateur.commune) }}
                                    <select id="prestataire_utilisateur_adresseUtilisateur_commune"
                                            name="prestataire[utilisateur][adresseUtilisateur][commune]"
                                            class="form-control">
                                        {% if is_granted('ROLE_PRESTATAIRE') %}
                                            <option value="{{ app.user.adresseUtilisateur.commune }}">{{ app.user.adresseUtilisateur.commune }}</option>
                                        {% endif %}
                                    </select>
                                    {{ form_errors(form.utilisateur.adresseUtilisateur.commune) }}
                                </div>
                                {# <div class="form-group">
                                     {{form_label(form.utilisateur.adresseUtilisateur.commune)}}
                                     {{form_widget(form.utilisateur.adresseUtilisateur.commune)}}
                                     {{form_errors(form.utilisateur.adresseUtilisateur.commune)}}
                                 </div>#}
                                <div class="form-group">
                                    {{ form_label(form.utilisateur.adresseUtilisateur.localite) }}
                                    {{ form_widget(form.utilisateur.adresseUtilisateur.localite) }}
                                    {{ form_errors(form.utilisateur.adresseUtilisateur.localite) }}
                                </div>
                                <div class="form-group">

                                    {{ form_widget(form._token) }}

                                </div>

                                <div class="form-group">
                                    <button type="submit" id="prestataire_Envoyer" name="prestataire[Envoyer]" class="btn btn-default pull-right btn">Envoyer</button>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

