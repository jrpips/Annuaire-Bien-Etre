{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ title }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="main">
            <div class="main-inner">
                <div class="container">
                    <div class="content">
                        <div class="row">

                            <section class="background-white p20">
                                <div class="page-title">
                                    <h2>{{ title }}</h2>
                                </div>
                                {{ form_start(form) }}

                                <div class="form-group">
                                    <div class="col-sm-6">
                                        {{ form_label(form.nom) }}
                                        {{ form_widget(form.nom) }}
                                        {{ form_errors(form.nom) }}

                                        {{ form_label(form.tarif) }}
                                        {{ form_widget(form.tarif) }}
                                        {{ form_errors(form.tarif) }}

                                        {{ form_label(form.info) }}
                                        {{ form_widget(form.info) }}
                                        {{ form_errors(form.info) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_label(form.description) }}
                                        {{ form_widget(form.description) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        {{ form_label(form.dateDebut) }}
                                        {{ form_widget(form.dateDebut) }}
                                        {{ form_errors(form.dateDebut) }}

                                        {{ form_label(form.dateFin) }}
                                        {{ form_widget(form.dateFin) }}
                                        {{ form_errors(form.dateFin) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_label(form.affichageDebut) }}
                                        {{ form_widget(form.affichageDebut) }}
                                        {{ form_errors(form.affichageDebut) }}

                                        {{ form_label(form.affichageFin) }}
                                        {{ form_widget(form.affichageFin) }}
                                        {{ form_errors(form.affichageFin) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-4">{{ form_errors(form) }}</div>
                                    <div class="col-sm-8">{{ form_rest(form) }}</div>
                                </div>
                            </section>
                            {# {% for type, message in app.session.flashbag.all() %}
                                 {% if type == 'notice' %}
                                     {{ message[0] }}
                                 {% endif %}
                             {% endfor %}#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}