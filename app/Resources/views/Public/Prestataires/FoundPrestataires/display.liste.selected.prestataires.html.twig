{# resultat.recherche.prestataire #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="page-header">
{% set nb = prestataires|length %}
            {% set pluriel=(nb>1)?'Résultats':'Résultat' %}
            <h2>{{ pluriel }} de votre recherche: {{ nb }}</h2>

        </div>

        <div class="cards-simple-wrapper">
            <div class="row">
                {% for prestataire in prestataires %}

                    <div class="col-sm-6 col-md-3">

                        <div class="card-simple">
{% if prestataire.images|length >0 %}
                            {% set imgServicePrestataire=(prestataire.images is defined)?(prestataire.images)|first.url:'image/prestataire.png' %}
{% else %}
    {% set imgServicePrestataire='image/poster.jpg' %}
{% endif %}
                            <div class="card-simple-background" style="background:url('{{asset(imgServicePrestataire)}}') no-repeat;background-size:cover">

                                <div class="card-simple-content">
                                    <h2><a href="{{ path('details_prestataire',{'prestataire_nom':prestataire.nom}) }}">{{ prestataire.nom }}</a></h2>
                                    <h3 style="text-align:center">
                                       {# <a href="{{ path('add_favori',{'nomPrestataire':prestataire.nom,'from':'home'}) }}"
                                           class="fa fa-heart-o"></a>#}
                                    </h3>
                                    <div class="card-simple-rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>

                                    <div class="card-simple-actions">
                                        <a href="#" class="fa fa-bookmark-o"></a>
                                        <a href="listing-detail.html" class="fa fa-search"></a>
                                        <a href="#" class="fa fa-heart-o"></a>{#injecter ID prestataire#}
                                    </div>

                                </div>

                                {#                                          {% set firstService=(prestataire.categServices is defined)?(prestataire.categServices)|first.nom:'service' %}#}
                                <div class="card-simple-label">{{ prestataire.siteInternet }}</div>

                            </div>
                        </div>

                    </div>

                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}{# empty Twig template #}
