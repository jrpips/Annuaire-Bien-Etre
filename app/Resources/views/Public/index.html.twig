{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="main" id="homepage">

        <div class="main-inner">

            <div class="content">

                <div class="mt-80">

                    <div id="myCarousel" class="carousel slide" data-ride="carousel">

                        <!-- Indicators -->

                        <ol class="carousel-indicators">

                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>

                        </ol>

                        <!-- Wrapper for slides -->

                        <div class="carousel-inner" role="listbox">

                            {% set slider =['poster.jpg','poster2.jpg','poster3.jpg'] %} <!-- erzatz chargement DB -->

                            {% for photo in slider %}

                                {% set class=loop.index==1?'active':'' %}

                                <div class="item {{ class }}">
                                    <img src="{{ asset("image/"~photo) }}" alt="Chania">
                                </div>

                            {% endfor %}

                        </div>

                        <div class="container" id="gp_content">

                            <div class="row">

                                <div class="col-sm-8 col-sm-offset-2 col-xs-12 col-xs-offset-0">

                                    <h1>Bien-ÃŠtre</h1>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. <br>Maecenas a porttitor
                                        sem. Morbi et lacinia. </p>

                                </div><!-- /.col-* -->

                            </div><!-- /.row -->

                        </div><!-- /.container -->

                    </div><!--/# myCarousel -->

                    <div class="container">

                        <div class="block background-white fullwidth pt0 pb0">

                            <div class="partners">
                                {% for i in 1..5 %}

                                    <a href="#">
                                        <img src="{{ asset('image/tmp/partner-'~i~'.jpg') }}" alt="">
                                    </a>

                                {% endfor %}
                            </div><!-- /.partners -->

                        </div>

                        <div class="page-header">

                            <h1>Services</h1>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. <br>Maecenas a porttitor sem.
                                Morbi et lacinia. </p>

                        </div><!-- /.page-header -->

                        <div class="cards-simple-wrapper">

                            <div class="row">

                                {% for s in services %}

                                    {% set pathImg=(s.image.url matches '{^http}')?'':'image/userUploads/' %}

                                    <div class="col-sm-6 col-md-3">

                                            <div class="card-simple">

                                                <div class="card-simple-background"
                                                     style="background:url('{{ asset(pathImg~s.image) }}') no-repeat;background-size:cover">

                                                    <div class="card-simple-content">
                                                        <h2><a href="{{ path('service_prestataires',{'service':s.nom}) }}">{{ s.description }}</a></h2>

                                                        <div class="card-simple-actions">
                                                            <p>{{ s.description }}</p>

                                                        </div><!-- /.card-simple-actions -->

                                                    </div><!-- /.card-simple-content -->

                                                    <div class="card-simple-label">{{ s.nom }}</div>

                                                </div><!-- /.card-simple-background -->

                                            </div><!-- /.card-simple -->

                                    </div><!-- /.col-* -->

                                {% endfor %}

                            </div><!-- /.row -->

                        </div><!-- /.cards-simple-wrapper -->

                    </div><!-- /.container -->

                </div><!-- /.mt-80 -->

            </div><!-- /.content -->

        </div><!-- /.main-inner -->

    </div><!-- /.main -->

{% endblock %}


