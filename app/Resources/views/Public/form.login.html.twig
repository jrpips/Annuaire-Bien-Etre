{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block body %}


    <div class="page-wrapper">
        <div class="main">
            <div class="main-inner">
                <div class="container">
                    <div class="content">
                        <div class="row">
                            <div id="connectConteneur" class="col-sm-4 col-sm-offset-4">
                                <div class="page-title">
                                    {% if error %}
                                        {%if error.message%}
                                            <div style="color:white;text-align:center" class="alert alert-danger">Login / Mot de passe erron√©(s)</div>
                                        {% endif %}
                                    {% endif %}
                                    <h1>Login</h1>

                                </div><!-- /.page-title -->

                                <form action="{{ path('login_check') }}" method="post" id="connectForm" method="post" id="connectForm">

                                    <div class="form-group">
                                        <label for="username">Login </label>
                                        <input type="text" id="username" name="_username" value="" />
                                    </div>

                                    <div class="form-group"> 
                                        <label for="password">Mot de passe </label>
                                        <input type="password" id="password" name="_password" />
                                    </div>

                                    <div class="form-group">

                                        <button type="submit" class="btn btn-default pull-right btn">Envoyer</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%endblock%}

