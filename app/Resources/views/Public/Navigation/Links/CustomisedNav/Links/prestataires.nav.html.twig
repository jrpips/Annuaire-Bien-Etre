{# Customised Prestataire Nav #}

<button class="btn btn-default dropdown-toggle" style="height:35px;padding:0 0 0 5px" type="button" id="dropdownMenu1" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
    <div style="display: inline-block;border:none">
        {% if app.user.prestataire.image.url is defined %}

            {% set pathImg=(app.user.prestataire.image.url matches '{^http}')?'':'image/userUploads/' %}

            <img src="{{ asset(pathImg~app.user.prestataire.image.url) }}"/>

        {% else %}

            <img src="{{ asset('image/prestataire.png') }}" alt=""/>

        {% endif %}

    </div>
    <span class="header-nav-user-name">{{ app.user.username }}</span> <i class="fa fa-chevron-down"></i>
</button>

    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">

        <li>
            <a href="{{ path('details_prestataire',{'prestataire_nom':app.user.prestataire.nom}) }}"><span
                        class="glyphicon glyphicon-eye-open"> </span> Visualiser ma page</a>

        <li>
            <a href="{{ path('dashboard_stage',{'prestataire_nom':app.user.prestataire.nom}) }}"><span
                        class="glyphicon glyphicon-pencil"></span> Stages</a>

        <li>
            <a href="{{ path('prestataire_services') }}"><span class="glyphicon glyphicon-pencil"></span> Services</a>

        <li>
            <a href="{{ path('dashboard_promotion') }}"><span class="glyphicon glyphicon-pencil"></span> Promotions</a>

        <li>
            <a href="{{ path('update_prestataire') }}">Modifier mes données</a>

        <li>
            <a href="{{ path('logout') }}" style="color:rgb(169,39,39)">
                <span class="glyphicon glyphicon-log-out"></span>
                Déconnexion
            </a>
    </ul>
</li>
