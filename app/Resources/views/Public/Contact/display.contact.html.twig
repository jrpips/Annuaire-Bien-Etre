                                 <div class="form-group">
                                     <label for="">Nom</label>
                                     {{ form_widget(form.nom) }}
                                 </div>

                                 <div class="form-group">
                                     <label for="">Email <span class="required">*</span></label>
                                     {{ form_widget(form.email) }}
