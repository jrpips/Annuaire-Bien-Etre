{% block body %}

    {#{% if error != null%}
         <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}#}
    <div class="page-wrapper">
        <div class="main">
            <div class="main-inner">
                <div class="container">
                    <div class="content">
                        <div class="row">
                            <div id="connectConteneur" class="col-sm-4 col-sm-offset-4">
